<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="@color/light_grey"
    android:layout_margin="@dimen/spacing_xxs">

    <TextView
        style="@style/TextStyle"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/spacing_s"
        android:paddingHorizontal="@dimen/spacing_xl"
        tools:drawableTopCompat="@drawable/icon_adult"
        android:drawablePadding="@dimen/spacing_s"
        android:layout_gravity="center"
        tools:text="Дети"/>

</com.google.android.material.card.MaterialCardView>